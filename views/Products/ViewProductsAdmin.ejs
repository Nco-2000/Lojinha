<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/table.css">
    <title>Produtos</title>
</head>
<body>
    <%- include('../navbar.ejs') %>
    <table>
        <thead>
            <tr>
                <th>Nome</th>
                <th>Estoque</th>
                <th>Preço</th>
                <th>Categoria</th>
                <th>Peso</th>
                <th>Cor</th>
                <th>Tamanho</th>
                <th>Descrição</th>
                <th>EDIT</th>
                <th>REMOVE</th>
            </tr>
        </thead>
        <tbody>
            <% if (success == false) { %>
              <tr>
                <td colspan="10">
                  <h1>No Products exist</h1>
                </td>
              </tr>
            <% } else { %>
              <% products.forEach(product => { %>
                <tr>
                  <td data-label="Nome"><%= product.Name %></td>
                  <td data-label="Estoque"><%= product.Stock %></td>
                  <td data-label="Preço">R$<%= product.Price %></td>
                  <td data-label="Categoria"><%= product.Category_id %></td>
                  <td data-label="Peso"><%= product.Weight %></td>
                  <td data-label="Cor"><%= product.Color %></td>
                  <td data-label="Tamanho"><%= product.Size %></td>
                  <td data-label="Descrição"><%= product.Description %></td>
                  <td data-label="EDIT">
                    <form action="/Products/Edit/<%= product.ID_Product %>" method="post">
                      <input type="submit" value="Edit Product">
                    </form>
                  </td>
                  <td data-label="REMOVE">
                    <form class="submit-form" action="/Products/Delete/<%= product.ID_Product %>?_method=DELETE" method="post">
                      <input class="btn btn-danger" type="submit" value="Remove Product">
                    </form>
                  </td>
                </tr>
              <% }) %>
            <% } %>
        </tbody>
    </table>
    <form action="Products/New" method="get">
        <button class="btn btn-danger">Add new Product</button>
    </form>
</body>
</html>
