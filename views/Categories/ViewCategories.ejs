<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/table.css">
    <title>Document</title>

</head>
<body>
  <%- include('../navbar.ejs') %>
  <table>
    <thead>
        <tr>
            <th>Nome</th>
            <th>Quantidade de Items</th>
            <th>ID Imagems</th>
            <th>EDIT</th>
            <th>REMOVE</th>
        </tr>
    </thead>
      <tbody>
        <% if (success == false) { %>
          <tr>
            <h1>No categories exist</h1>
          </tr>
        <% } else{ %>
            <% Category.forEach(cat => { %>
              <tr>
                <td><%= cat.Name %></td>
                <td><%= cat.Qtd_items %></td>
                <td><%= cat.image_id %></td>
                <td><form action="/Categories/Edit/<%= cat.ID_Category%>" method="post">
                    <input type="submit" value="Edit">
                </form></td>
                <td><form id="submit"  class="submit-form" action="/Categories/Delete/<%= cat.ID_Category %>?_method=DELETE" method="post">
                    <input class="btn btn-danger"  type="submit" value="Remove Category">
                </form></td>
                <br>
              </tr>
            <% }) %> 
        <% } %> 
      </tbody> 
    </table>  
    <form action="/Categories/New" method="get">
      <input class="btn btn-secondary"  type="submit" value="Adicionar Categoria">
  </form>
</body>
<script>
    // Get form element
    const forms  = document.querySelectorAll('.submit-form');
    
    // Handle form submission
    forms.forEach(form => {
      form.addEventListener('submit', function (e) {
        e.preventDefault();  // Prevent default form submission

        // Create a FormData object from the form
        const formData = new FormData(form);

        // Send AJAX request to the server
        fetch('categories/submit', {
          method: 'POST',
          body: formData
        })
        .then(response => response.json())
        .then(data => {
          // Show confirmation dialog
          const userConfirmed = window.confirm(data.message);

          if (userConfirmed) {
            form.submit()
          } else {
            
          }
        })
        .catch(error => {
          console.error('Error:', error);
        });
      });
    });
  </script>
</html>